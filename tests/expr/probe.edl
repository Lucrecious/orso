
{
    foo :: (n: int) -> int {
        if n > 0 then return @run tar(-1);
        return n;
    };

    tar :: (n: int) -> int {
        return bar(n-1);
    };

    bar :: (n: int) -> int {
        if n > 0 then return foo(-1);
        return n;
    };

    foo(10);
}

